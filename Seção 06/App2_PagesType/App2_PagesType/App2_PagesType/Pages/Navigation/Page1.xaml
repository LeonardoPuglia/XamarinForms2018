<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2_PagesType.Pages.Navigation.Page1"
             Title="Title of The Navigation">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Pesquisa" Icon="xamarin.png"/>
        <ToolbarItem Text="Detalhes" Icon="Page.png"/>
        <ToolbarItem Text="Ordernar" Icon="play.png"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="I'm a ContentPage!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Go to Page 2 ..." Clicked="ChangeToSecondPage"/>

            <Button Text="Open Modal ..." Clicked="OpenModal"/>

            <Button Text="Go To Master ..." Clicked="GoToMaster"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>