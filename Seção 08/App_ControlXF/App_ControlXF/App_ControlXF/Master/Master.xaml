<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:page="clr-namespace:App_ControlXF"
             x:Class="App_ControlXF.Master.Master">

    <MasterDetailPage.Master>
        <!--Menu-->
        <ContentPage Title="Menu">
            <StackLayout>
                <Button Text="Activity Indicator" Clicked="GoActivityIndicatorPage"/>
                <Button Text="Progressive Bar"    Clicked="GoProgressiveBar"/>
                <Button Text="BoxView"            Clicked="GoBoxView"/>
                <Button Text="Labels"             Clicked="GoLabelPage"/>
                <Button Text="Buttons"            Clicked="GoButtonPage"/>
                <Button Text="Entry/Editor"       Clicked="GoEntryPage"/>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>

    <MasterDetailPage.Detail>
        <!--Pages-->
        <page:MainPage/>
    </MasterDetailPage.Detail>
    
</MasterDetailPage>