<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App3_LayoutXF.Layouts.Absolute.AbsolutePage">
    <ContentPage.Content>
        <AbsoluteLayout>
            <BoxView AbsoluteLayout.LayoutBounds="0,0,200,100" BackgroundColor="Blue" />
            <BoxView AbsoluteLayout.LayoutBounds="50,50,100,100" BackgroundColor="Red" />
            <BoxView AbsoluteLayout.LayoutBounds="200,200,50,50" BackgroundColor="Green" />

            <BoxView AbsoluteLayout.LayoutFlags="WidthProportional" AbsoluteLayout.LayoutBounds="0,400,0.85,100" BackgroundColor="Yellow" />
            <BoxView AbsoluteLayout.LayoutFlags="SizeProportional" AbsoluteLayout.LayoutBounds="50,50,0.5,0.5" BackgroundColor="YellowGreen" />
            

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>